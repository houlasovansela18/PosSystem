{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "jsx": "preserve",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": ["src/types/app-env.ts"],
    "paths": {
      "*": ["src/*"],
      "tests": ["__tests__/*"],
      "@components/*": ["src/components/*"]
    },
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*"]
}
